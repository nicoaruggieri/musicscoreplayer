<div class="header-card">
    <h1><a class="text-decoration-none text-dark" href="/">Stem Player</a></h1>
    <div class="main-playback-controls">
        <div>
            <button id="globalMute" class="btn btn-danger mute"><i id="globalMute" class="fas fa-volume-mute mute"></i></button>
            <button id="globalSolo" class="btn btn-warning solo"><i id="globalSolo" class="fab fa-stripe-s text-white solo"></i></button>
        </div>
        <span class="button-separator">|</span>
        <div>
            <button class="btn btn-primary" id="rewindStart"><i id="rewindStart" class="fas fa-step-backward"></i></button>
            <button class="btn btn-success" id="play"><i id="play" class="fas fa-play"></i></button>
        </div>
        <span class="button-separator">|</span>
        <div>
            <button class="btn btn-info loop-button" id="loopA">A</i></button>
            <button class="btn btn-outline-warning" id="loopToggle"><i id="loopToggle" class="fas fa-undo"></i></button>
            <button class="btn btn-info loop-button" id="loopB">B</button>
        </div>
        <span class="button-separator">|</span>
        <div class="speed-controls">
            <select name="speed" id="playbackSpeed" value="100">
                <option value="100">100%</option>
                <option value="75">75%</option>
                <option value="50">50%</option>
            </select>
            <p>Playback Speed</p>
        </div>
    </div>
    <div class="songinfo text-center">
        <span id="title"> <%= songInfo %>  </span>
    </div>
    <div class="seekingBar">
        <div id='looper' class='looper'>
            <div class="loopLine"></div>
        </div>
        <input id="playbackSeek" type="range" value="0" min="0" max="1" step="0.001">
    </div>
    <div class="loading" id="loading"></div>
</div>