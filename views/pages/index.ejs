<% layout('/layouts/boilerplate') %>
<header class="d-flex py-2 mb-4 border-bottom justify-content-between">
    <div>
        <img class="" src="/static/img/banddude.png" width="60px" height="60px">
        <a href="/" class="text-dark text-decoration-none"><h1 class="align-middle d-inline-block">Stem Player</h1></a>
    </div>
    <a href="http://boardmanband.org"><button class="btn btn-primary m-2">Back to boardmanband.org</button></a>
</header>
<div class="container-xl">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Song</th>
                <th scope="col">Artist</th>
                <th scope="col"> </th>
            </tr>
        </thead>
        <tbody>
            <% for (let i = 0; i < songInfo.length; i++) { %>
                <tr>
                    <td><a class="text-decoration-none" href="/<%= songInfo[i][0] %>"><%= songInfo[i][1][0] %></a></td>            
                    <td><%= songInfo[i][1][1] %></td>
                    <td><a href="/<%= songInfo[i][0] %>"><button class="btn btn-sm btn-primary">Play</button></a></td>
                </tr>           
            <% } %>
        </tbody>
    </table>
</div>